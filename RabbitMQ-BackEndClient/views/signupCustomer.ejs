<!DOCTYPE html>
<html >
    <title>
      Sign Up to Ride With Uber Today | Uber
    </title>
    
<link rel="stylesheet" type="text/css" href="css/base_signup_lite.css">
<link rel="stylesheet" type="text/css" href="css/base_signup_creditcardicon.css">
<link rel="stylesheet" href="css/superfine.css">
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap-theme.min.css">

<style>
  .has-error .form-control {
border:1px solid #f00;
} 
  .has-error .form-control {
background: #ffe5e5;

} 

.has-error .control-label,

.has-error .alert
 {
 
color:red;
} 
.red
{
color:red;
}


 
 
</style>
<body class=" ">
  
  <section class="wrapper">
    <header class="contextual"><div class="logo"></div></header>
    <section class="content ">
      <div class="signup-wrapper">
        <section class="signup-top">
          <div class="signup-top-images">
            <div class="signup-top-phones"></div>
          </div>
          <div class="signup-top-text">
            <div class="signup-top-text-title">
              Sign Up to Ride
            </div>
          <div class="signup-top-text-subtitle">
            <p>Welcome to Uber, the easiest way to get around at the tap of a button.</p>
            <p>Create your account and get moving in minutes.</p>
          </div>
      </div>
    </section>
    <section class="signup-form">
      <article class="form-container">
        <div data-ng-app="signupCustApp" data-ng-controller="signupCustController">
          <form   class="form-vertical"  name="signCust" novalidate>
            <div class="signup-form-section account">
              <div class="signup-form-section-title"><p>Account</p></div>
              <div class="signup-form-section-required">Required</div>
              <div class="signup-form-section-number blue">1</div>
              <div class="signup-form-section-line"></div>
              <div class="form-group required" data-ng-class="{
                    'has-error': (signCust.customer_id.$touched||signCust.customer_id.$dirty || signCust.submitted) && (signCust.customer_id.$error.serverMessage||signCust.customer_id.$invalid),
                    'has-success': signCust.customer_id.$dirty && signCust.customer_id.$valid}">
                <label class=" control-label" for="ssn">SSN</label>
                <input type="text" value=""  class="form-control" data-ng-model="customer.customer_id" name="customer_id" id="customer_id" placeholder="123-45-6789"  data-ng-pattern="/^[0-9]{3}\-[0-9]{2}\-[0-9]{4}$/" required>
                <div class="alert alert-danger"  data-ng-show="(signCust.submitted||signCust.customer_id.$touched) && signCust.customer_id.$error.required"><span class="glyphicon glyphicon-remove red" aria-hidden="true"></span> SSN Is Required.</div>
                <div class="alert alert-danger"   data-ng-show="(signCust.submitted||signCust.customer_id.$dirty)&&signCust.customer_id.$error.pattern"><span class="glyphicon glyphicon-remove red" aria-hidden="true"></span>SSN Is Invalid.</div> 
                <div class="alert alert-danger"  data-ng-show="signCust.customer_id.$error.serverMessage"><span class="glyphicon glyphicon-remove red" aria-hidden="true"></span>{{signCust.customer_id.$error.serverMessage}}</div>
               </div>
              <div class="form-group required" data-ng-class="{
                    'has-error': (signCust.email.$touched||signCust.email.$dirty|| signCust.submitted) && signCust.email.$invalid,
                    'has-success': signCust.email.$dirty && signCust.email.$valid}">
                <label class=" control-label" for="email">Email</label>
                <input class="form-control" type="email" value=""  data-ng-model="customer.email" name="email" id="email" placeholder="name@example.com" data-ng-pattern="/\S+@\S+\.\S+/" required>
                <div class="alert alert-danger" data-ng-show="(signCust.submitted||signCust.email.$dirty) && signCust.email.$error.pattern "><span class="glyphicon glyphicon-remove red" aria-hidden="true"></span>Invalid Email Address</div>
                <div class="alert alert-danger"  data-ng-show="(signCust.submitted||signCust.email.$touched) && signCust.email.$error.required"><span class="glyphicon glyphicon-remove red" aria-hidden="true"></span>Email is required.</div>
              </div>
              <div class="form-group required " data-ng-class="{
                    'has-error': (signCust.password.$touched||signCust.password.$dirty||signCust.submitted) && signCust.password.$invalid,
                    'has-success': signCust.password.$dirty && signCust.password.$valid}">
                <label  class=" control-label" for="password">Password</label>
                <input class="form-control" type="password" value=""  data-ng-model="customer.password" name="password" id="password"  data-ng-pattern="/[a-zA-Z0-9]{5,}/" placeholder="At least 5 characters" required>
                 <div class="alert alert-danger" data-ng-show="(signCust.submitted||signCust.password.$dirty) && signCust.password.$error.pattern "><span class="glyphicon glyphicon-remove red" aria-hidden="true"></span>Password should be at least 5 characters</div>
                <div class="alert alert-danger"  data-ng-show="(signCust.submitted||signCust.password.$touched) && signCust.password.$error.required"><span class="glyphicon glyphicon-remove red" aria-hidden="true"></span>Password required.</div>
              </div>
            </div>
            <div class="signup-form-section profile">
              <div class="signup-form-section-title"><p>Profile</p></div>
              <div class="signup-form-section-number">2</div>
              <div class="signup-form-section-line"></div>
              <div class="row form-row">
              <div class="col-md-6 col-xs-6 md-push-right-half sm-push-right-half xs-push-right-half">
              <div class="form-group required "  data-ng-class="{
                    'has-error': (signCust.first_name.$touched||signCust.first_name.$dirty||signCust.submitted) && signCust.first_name.$invalid,
                    'has-success': signCust.first_name.$dirty && signCust.first_name.$valid}">
              <label class=" control-label" for="first_name">First Name</label>
                
                    <input type="text" class="form-control" value="" data-ng-model="customer.first_name" name="first_name" id="first_name" placeholder="First Name" required>
                      <div class="alert alert-danger"  data-ng-show="(signCust.submitted||signCust.first_name.$touched) && signCust.first_name.$error.required"><span class="glyphicon glyphicon-remove red" aria-hidden="true"></span>Your First Name.</div>
                  </div>
                  </div>
                   <div class="col-md-6 col-xs-6 md-push-left-half xs-push-left-half">
                    <div class="form-group required "  data-ng-class="{
                    'has-error': (signCust.last_name.$touched||signCust.last_name.$dirty||signCust.submitted) && signCust.last_name.$invalid,
                    'has-success': signCust.last_name.$dirty && signCust.last_name.$valid}">
                    <label class="control-label" for="last_name">Last Name</label>
               
                    <input type="text" class="form-control" data-ng-model="customer.last_name" value="" name="last_name" id="last_name" placeholder="Last Name" required>
                      <div class="alert alert-danger"  data-ng-show="(signCust.submitted||signCust.last_name.$touched) && signCust.last_name.$error.required"><span class="glyphicon glyphicon-remove red" aria-hidden="true"></span>Your Last Name.</div>
                  </div>
                </div>
              </div>
               <div class="form-group required "  data-ng-class="{
                    'has-error': (signCust.address.$touched||signCust.address.$dirty||signCust.submitted) && signCust.address.$invalid,
                    'has-success': signCust.address.$dirty && signCust.address.$valid}">
                  <label class="control-label" for="address">Address</label>
                  <input class="form-control" data-ng-model="customer.address" type="text" value="" name="address" id="address" placeholder="Address" required>
                   <div class="alert alert-danger"  data-ng-show="(signCust.submitted||signCust.address.$touched) && signCust.address.$error.required"><span class="glyphicon glyphicon-remove red" aria-hidden="true"></span>Your street name.</div>
                </div>
              <div class="row form-row">
                  <div class="col-md-6 col-xs-6 md-push-right-half sm-push-right-half xs-push-right-half">
                      <div class="form-group required " data-ng-class="{
                    'has-error': (signCust.city.$touched||signCust.city.$dirty||signCust.submitted) && signCust.city.$invalid,
                    'has-success': signCust.city.$dirty && signCust.city.$valid}">
                          <label class="control-label" for="city">City</label>
                          <input class="form-control" data-ng-model="customer.city" type="text" value="" name="city" id="city" placeholder="City" required>
                          <div class="alert alert-danger"  data-ng-show="(signCust.submitted||signCust.city.$touched) && signCust.city.$error.required"><span class="glyphicon glyphicon-remove red" aria-hidden="true"></span>City where you live.</div>
                        </div>
                      </div>
                  <div class="col-md-6 col-xs-6 md-push-right-half sm-push-right-half xs-push-right-half">
                       <div class="form-group required" data-ng-class="{
                    'has-error': (signCust.zipCode.$touched||signCust.zipCode.$dirty||signCust.submitted) && signCust.zipCode.$invalid,
                    'has-success': signCust.zipCode.$dirty && signCust.zipCode.$valid}">
                        <label class="control-label" for="zipcode">ZipCode</label>
                        <input class="form-control" data-ng-model="customer.zipCode" type="text" value="" name="zipCode" id="zipCode" data-ng-pattern="^\\d{5}(-\\d{4})?$" placeholder="ZipCode" required>
                        <div class="alert alert-danger"  data-ng-show="(signCust.submitted||signCust.zipCode.$touched) && signCust.zipCode.$error.required"><span class="glyphicon glyphicon-remove red" aria-hidden="true"></span>Postal Code is Required.</div>
                        <div class="alert alert-danger" data-ng-show="(signCust.submitted||signCust.zipCode.$dirty) && signCust.zipCode.$error.pattern "><span class="glyphicon glyphicon-remove red" aria-hidden="true"></span>Postal Code should be at least 5 digit format or 9 digit format</div>
                    </div>
                  </div>
                </div>
              
              <div class="form-group required " data-ng-class="{
                    'has-error': (signCust.state.$touched||signCust.state.$dirty||signCust.submitted) && signCust.state.$invalid,
                    'has-success': signCust.state.$dirty && signCust.state.$valid}">
                  <label class="control-label" for="state">State</label>
                  <input class="form-control" type="text" value="" data-ng-model="customer.state" name="state" id="state" placeholder="State" required>
                  <div class="alert alert-danger"  data-ng-show="(signCust.submitted||signCust.state.$touched) && signCust.state.$error.required">
                  <span class="glyphicon glyphicon-remove red" aria-hidden="true"></span>
                  In Which State do you live?
                  </div>
              </div>
              <div class="form-group js-mobile-country required mobile-number" data-ng-class="{
                    'has-error': (signCust.mobile.$touched||signCust.mobile.$dirty||signCust.submitted) && signCust.mobile.$invalid,
                    'has-success': signCust.mobile.$dirty && signCust.mobile.$valid}">
                  <label class="control-label" for="mobile">Mobile Number</label>
                  <select name="mobile_country" id="mobile_country" class="required">
                    <option value="US" label="United States (+1)" selected="" data-iso3="USA" data-telephone_code="+1">United States</option>
                  </select>
                  <div class="mobile-country-mask">
                      <p class="mobile-country-mask-text">+1</p>
                  </div>
                  <input data-ng-model="customer.mobile" class="form-control"  maxlength="10" type="text" value="" name="mobile" id="mobile" data-ng-pattern="/^[1-9]{1}[0-9]{9}$/" placeholder="(201) 555-5555" required>
                  <div class="alert alert-danger"  data-ng-show="(signCust.submitted||signCust.mobile.$touched) && signCust.mobile.$error.required">
                  <span class="glyphicon glyphicon-remove red" aria-hidden="true"></span>
                  Your Mobile Number?
                  </div>
                  <div class="alert alert-danger" data-ng-show="(signCust.submitted||signCust.mobile.$dirty) && signCust.mobile.$error.pattern "><span class="glyphicon glyphicon-remove red" aria-hidden="true"></span>Mobile number Invalid</div>
              </div>
              </div>
           

            <div class="signup-form-section payment">
              <div class="signup-form-section-title"><p>Payment</p></div>
              <div class="signup-form-section-number">3</div>
              <div class="signup-form-section-line"></div>
              <div class="credit-card-info">
                  <div class="row form-row">
                      <div class="col-md-9 col-xs-9 xs-push-right-half">
                          <div class="form-group required " data-ng-class="{
                    'has-error': (signCust.cc_number.$touched||signCust.cc_number.$dirty||signCust.submitted) && signCust.cc_number.$invalid,
                    'has-success': signCust.cc_number.$dirty && signCust.cc_number.$valid}">
                              <label class="control-label" for="cc_number">Credit Card Number</label>
                               <div class="credit-card-icon"></div>
                              <input class="form-control" data-ng-model="customer.cc_number" type="text" value="" name="cc_number" id="cc_number" placeholder="1234 5678 9012 3456" required>
                             
                              <div class="alert alert-danger"  data-ng-show="(signCust.submitted||signCust.cc_number.$touched) && signCust.cc_number.$error.required">
                  <span class="glyphicon glyphicon-remove red" aria-hidden="true"></span>
                  Your Credit Card is Required.
                  </div>
                        </div>
                      </div>
                      <div class="col-md-3 col-xs-3 xs-push-left-half">
                          <div class="form-group required " data-ng-class="{
                    'has-error': (signCust.cvv.$touched||signCust.cvv.$dirty||signCust.submitted) && signCust.cvv.$invalid,
                    'has-success': signCust.cvv.$dirty && signCust.cvv.$valid}">
                              <label class="control-label" for="cvv">CVV</label>
                              <input class="form-control" data-ng-model="customer.cvv" type="text" value="" maxlength="3" data-ng-pattern="/[0-9]{3}$/" name="cvv" id="cvv" placeholder="123" required>
                             <div class="alert alert-danger"  data-ng-show="(signCust.submitted||signCust.cvv.$touched) && signCust.cvv.$error.required">
                  <span class="glyphicon glyphicon-remove red" aria-hidden="true"></span>
                  CVV ???.
                          </div>
                          <div class="alert alert-danger" data-ng-show="(signCust.submitted||signCust.cvv.$dirty) && signCust.cvv.$error.pattern "><span class="glyphicon glyphicon-remove red" aria-hidden="true"></span>CVV Invalid</div>
                          
                      </div>
                  </div>
                  </div>
                  <div class="form-group required " data-ng-class="{
                    'has-error': (signCust.cc_name.$touched||signCust.cc_name.$dirty||signCust.submitted) && signCust.cc_name.$invalid,
                    'has-success': signCust.cc_name.$dirty && signCust.cc_name.$valid}">
                        <label class="control-label" for="cc_name">Card Holder Name</label>
                        <input class="form-control" data-ng-model="customer.cc_name" type="text" value="" name="cc_name" id="cc_name" placeholder="Name On Card" required>
                        <div class="alert alert-danger"  data-ng-show="(signCust.submitted||signCust.cc_name.$touched) && signCust.cc_name.$error.required">
                  <span class="glyphicon glyphicon-remove red" aria-hidden="true"></span>
                  Card Holder Name is Required.
                  </div>
                  </div>
                  <div class="form-group required" data-ng-class="{
                    'has-error': ((signCust.month.$touched || signCust.year.$touched)||(signCust.month.$dirty || signCust.year.$dirty||signCust.submitted)) && (signCust.month.$invalid || signCust.year.$invalid),
                    'has-success': (signCust.month.$dirty || signCust.year.$dirty) && (signCust.month.$valid || signCust.year.$valid)}">
                      <div class="row form-row">
                          <div class="col-md-8 col-xs-12 full-row-xs">
                              <label class="control-label" for="month">Expiration Date</label>
                              <div class="row form-row">
                                  <div class="col-md-6 col-xs-6 xs-push-right-half col-xs-row">
                                      <select class="form-control" data-ng-model="customer.month" name="month" id="month" required>
                                              <option value="0" label="month" disabled="" selected="">month</option>
                                              <option value="1" label="1">1</option>
                                              <option value="2" label="2">2</option>
                                              <option value="3" label="3">3</option>
                                              <option value="4" label="4">4</option>
                                              <option value="5" label="5">5</option>
                                              <option value="6" label="6">6</option>
                                              <option value="7" label="7">7</option>
                                              <option value="8" label="8">8</option>
                                              <option value="9" label="9">9</option>
                                              <option value="10" label="10">10</option>
                                              <option value="11" label="11">11</option>
                                              <option value="12" label="12">12</option>
                                      </select>
                                       <div class="alert alert-danger"  data-ng-show="(signCust.submitted||signCust.month.$touched) && signCust.month.$error.required">
                  <span class="glyphicon glyphicon-remove red" aria-hidden="true"></span>
                  Year of Card Expiration.
                  </div>
                                  </div>
                                  <div class="col-md-6 col-xs-6 xs-push-left-half col-xs-row">
                                      <select class="form-control " data-ng-model="customer.year" name="year" id="year"  required>
                                              <option value="0" label="year" disabled="" selected="">year</option>
                                              <option value="2015" label="2015">2015</option>
                                              <option value="2016" label="2016">2016</option>
                                              <option value="2017" label="2017">2017</option>
                                              <option value="2018" label="2018">2018</option>
                                              <option value="2019" label="2019">2019</option>
                                              <option value="2020" label="2020">2020</option>
                                              <option value="2021" label="2021">2021</option>
                                              <option value="2022" label="2022">2022</option>
                                              <option value="2023" label="2023">2023</option>
                                              <option value="2024" label="2024">2024</option>
                                              <option value="2025" label="2025">2025</option>
                                              <option value="2026" label="2026">2026</option>
                                              <option value="2027" label="2017">2027</option>
                                      </select>
                                       <div class="alert alert-danger"  data-ng-show="(signCust.submitted||signCust.year.$touched) && signCust.year.$error.required">
                  <span class="glyphicon glyphicon-remove red" aria-hidden="true"></span>
                  Month of Card Expiration.
                  </div>
                                  </div>
                              </div>
                        </div>
                      </div>
                  </div>
              </div>
            </div>
            <div class="signup-form-section submit">
                <div class="col-md-12">
                    <div class="form-group">
                          <button type="submit" class="btn btn-primary"  data-ng-click="signupCustomer()">Create Account</button>
                    </div>
                </div>
            </div>
      </form>
      </div>
      
   
    </article>
   </section>
   </div>
   </section>
   </section>
</body>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
<script src= "http://ajax.googleapis.com/ajax/libs/angularjs/1.3.15/angular.min.js"></script>
<script>
  var app = angular.module('signupCustApp', []);
  app.controller('signupCustController', function ($http,$scope,$parse,$window) 
  {       
  
     
    $scope.signupCustomer=function(){
      if($scope.signCust.$invalid){
        $scope.signCust.submitted=true;
      }
      
      else{
        $http({
            method: 'POST',
            url: '/signupCustomer',
            data: $scope.customer
          }).
            then(function(response) { 
              if(response.data.status==300)
            	  alert(response.data.message);
              else
                $window.location.href = '/loginCustomer';});
      } 
    }
  });
</script>
</html>