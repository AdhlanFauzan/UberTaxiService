<!DOCTYPE html>
<html >
    <title>
      Sign Up to Drive With Uber Today | Uber
    </title>
    
<link rel="stylesheet" type="text/css" href="css/base_signup_lite.css">
<link rel="stylesheet" type="text/css" href="css/base_signup_creditcardicon.css">
<link rel="stylesheet" href="css/superfine.css">
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap-theme.min.css">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
<script src= "http://ajax.googleapis.com/ajax/libs/angularjs/1.3.15/angular.min.js"></script>
<style>
  .has-error .form-control {
border:1px solid #f00;
} 

.has-error .control-label,

.has-error .alert
 {
color:red;
} 
.red
{
color:red;
}


 
 
</style>
<body class=" ">
  
  <section class="wrapper">
    <header class="contextual"><div class="logo"></div></header>
    <section class="content ">
      <div class="signup-wrapper">
        <section class="signup-top">
          <div class="signup-top-images">
            <div class="signup-top-phones"></div>
          </div>
          <div class="signup-top-text">
            <div class="signup-top-text-title">
              Uber Needs Partners Like You.
            </div>
          <div class="signup-top-text-subtitle">
            <p>Drive with Uber and earn great money as an independent contractor. Get paid weekly just for helping our community of riders get rides around town. Be your own boss and get paid in fares for driving on your own schedule.</p>
          </div>
      </div>
    </section>
    <section class="signup-form">
      <article class="form-container">
        <div data-ng-app="signupDriverApp" data-ng-controller="signupDriverController">
          <form   class="form-vertical"  name="signDriver" novalidate>
            
              
              <div class="form-group required" data-ng-class="{
                    'has-error': (signDriver.driver_id.$touched||signDriver.driver_id.$dirty || signDriver.submitted) && (signDriver.driver_id.$error.serverMessage||signDriver.driver_id.$invalid),
                    'has-success': signDriver.driver_id.$dirty && signDriver.driver_id.$valid}">
                <label class=" control-label" for="ssn">SSN</label>
                <input type="text" value=""  class="form-control" data-ng-model="driver.driver_id" name="driver_id" id="driver_id" placeholder="123-45-6789"  data-ng-pattern="/^[0-9]{3}\-[0-9]{2}\-[0-9]{4}$/" required>
                <div class="alert alert-danger"  data-ng-show="(signDriver.submitted||signDriver.driver_id.$touched) && signDriver.driver_id.$error.required"><span class="glyphicon glyphicon-remove red" aria-hidden="true"></span> SSN Is Required.</div>
                <div class="alert alert-danger"   data-ng-show="(signDriver.submitted||signDriver.driver_id.$dirty)&&signDriver.driver_id.$error.pattern"><span class="glyphicon glyphicon-remove red" aria-hidden="true"></span>SSN Is Invalid.</div> 
                <div class="alert alert-danger"  data-ng-show="signDriver.driver_id.$error.serverMessage"><span class="glyphicon glyphicon-remove red" aria-hidden="true"></span>{{signDriver.driver_id.$error.serverMessage}}</div>
               </div>
              <div class="form-group required" data-ng-class="{
                    'has-error': (signDriver.d_email.$touched||signDriver.d_email.$dirty|| signDriver.submitted) && signDriver.d_email.$invalid,
                    'has-success': signDriver.d_email.$dirty && signDriver.d_email.$valid}">
                <label class=" control-label" for="d_email">Email</label>
                <input class="form-control" type="d_email" value=""  data-ng-model="driver.d_email" name="d_email" id="d_email" placeholder="name@example.com" data-ng-pattern="/\S+@\S+\.\S+/" required>
                <div class="alert alert-danger" data-ng-show="(signDriver.submitted||signDriver.d_email.$dirty) && signDriver.d_email.$error.pattern "><span class="glyphicon glyphicon-remove red" aria-hidden="true"></span>Invalid Email Address</div>
                <div class="alert alert-danger"  data-ng-show="(signDriver.submitted||signDriver.d_email.$touched) && signDriver.d_email.$error.required"><span class="glyphicon glyphicon-remove red" aria-hidden="true"></span>Email is required.</div>
              </div>
              <div class="form-group required " data-ng-class="{
                    'has-error': (signDriver.d_password.$touched||signDriver.d_password.$dirty||signDriver.submitted) && signDriver.d_password.$invalid,
                    'has-success': signDriver.d_password.$dirty && signDriver.d_password.$valid}">
                <label  class=" control-label" for="d_password">Password</label>
                <input class="form-control" type="password" value=""  data-ng-model="driver.d_password" name="d_password" id="d_password"  data-ng-pattern="/[a-zA-Z0-9]{5,}/" placeholder="At least 5 characters" required>
                 <div class="alert alert-danger" data-ng-show="(signDriver.submitted||signDriver.d_password.$dirty) && signDriver.d_password.$error.pattern "><span class="glyphicon glyphicon-remove red" aria-hidden="true"></span>Password should be at least 5 characters</div>
                <div class="alert alert-danger"  data-ng-show="(signDriver.submitted||signDriver.d_password.$touched) && signDriver.d_password.$error.required"><span class="glyphicon glyphicon-remove red" aria-hidden="true"></span>Password required.</div>
              </div>
           
            
              <div class="row form-row">
              <div class="col-md-6 col-xs-6 md-push-right-half sm-push-right-half xs-push-right-half">
              <div class="form-group required "  data-ng-class="{
                    'has-error': (signDriver.first_name.$touched||signDriver.first_name.$dirty||signDriver.submitted) && signDriver.first_name.$invalid,
                    'has-success': signDriver.first_name.$dirty && signDriver.first_name.$valid}">
              <label class=" control-label" for="first_name">First Name</label>
                
                    <input type="text" class="form-control" value="" data-ng-model="driver.first_name" name="first_name" id="first_name" placeholder="First Name" required>
                      <div class="alert alert-danger"  data-ng-show="(signDriver.submitted||signDriver.first_name.$touched) && signDriver.first_name.$error.required"><span class="glyphicon glyphicon-remove red" aria-hidden="true"></span>Your First Name.</div>
                  </div>
                  </div>
                   <div class="col-md-6 col-xs-6 md-push-left-half xs-push-left-half">
                    <div class="form-group required "  data-ng-class="{
                    'has-error': (signDriver.last_name.$touched||signDriver.last_name.$dirty||signDriver.submitted) && signDriver.last_name.$invalid,
                    'has-success': signDriver.last_name.$dirty && signDriver.last_name.$valid}">
                    <label class="control-label" for="last_name">Last Name</label>
               
                    <input type="text" class="form-control" data-ng-model="driver.last_name" value="" name="last_name" id="last_name" placeholder="Last Name" required>
                      <div class="alert alert-danger"  data-ng-show="(signDriver.submitted||signDriver.last_name.$touched) && signDriver.last_name.$error.required"><span class="glyphicon glyphicon-remove red" aria-hidden="true"></span>Your Last Name.</div>
                  </div>
                </div>
              </div>
               <div class="form-group required "  data-ng-class="{
                    'has-error': (signDriver.address.$touched||signDriver.address.$dirty||signDriver.submitted) && signDriver.address.$invalid,
                    'has-success': signDriver.address.$dirty && signDriver.address.$valid}">
                  <label class="control-label" for="address">Address</label>
                  <input class="form-control" data-ng-model="driver.address" type="text" value="" name="address" id="address" placeholder="Address" required>
                   <div class="alert alert-danger"  data-ng-show="(signDriver.submitted||signDriver.address.$touched) && signDriver.address.$error.required"><span class="glyphicon glyphicon-remove red" aria-hidden="true"></span>Your street name.</div>
                </div>
              <div class="row form-row">
                  <div class="col-md-6 col-xs-6 md-push-right-half sm-push-right-half xs-push-right-half">
                      <div class="form-group required " data-ng-class="{
                    'has-error': (signDriver.city.$touched||signDriver.city.$dirty||signDriver.submitted) && signDriver.city.$invalid,
                    'has-success': signDriver.city.$dirty && signDriver.city.$valid}">
                          <label class="control-label" for="city">City</label>
                          <input class="form-control" data-ng-model="driver.city" type="text" value="" name="city" id="city" placeholder="City" required>
                          <div class="alert alert-danger"  data-ng-show="(signDriver.submitted||signDriver.city.$touched) && signDriver.city.$error.required"><span class="glyphicon glyphicon-remove red" aria-hidden="true"></span>City where you live.</div>
                        </div>
                      </div>
                  <div class="col-md-6 col-xs-6 md-push-right-half sm-push-right-half xs-push-right-half">
                       <div class="form-group required" data-ng-class="{
                    'has-error': (signDriver.zipCode.$touched||signDriver.zipCode.$dirty||signDriver.submitted) && signDriver.zipCode.$invalid,
                    'has-success': signDriver.zipCode.$dirty && signDriver.zipCode.$valid}">
                        <label class="control-label" for="zipcode">ZipCode</label>
                        <input class="form-control" data-ng-model="driver.zipCode" type="text" value="" name="zipCode" id="zipCode" data-ng-pattern="^\\d{5}(-\\d{4})?$" placeholder="ZipCode" required>
                        <div class="alert alert-danger"  data-ng-show="(signDriver.submitted||signDriver.zipCode.$touched) && signDriver.zipCode.$error.required"><span class="glyphicon glyphicon-remove red" aria-hidden="true"></span>Postal Code is Required.</div>
                        <div class="alert alert-danger" data-ng-show="(signDriver.submitted||signDriver.zipCode.$dirty) && signDriver.zipCode.$error.pattern "><span class="glyphicon glyphicon-remove red" aria-hidden="true"></span>Postal Code should be at least 5 digit format or 9 digit format</div>
                    </div>
                  </div>
                </div>
              
              <div class="form-group required " data-ng-class="{
                    'has-error': (signDriver.state.$touched||signDriver.state.$dirty||signDriver.submitted) && signDriver.state.$invalid,
                    'has-success': signDriver.state.$dirty && signDriver.state.$valid}">
                  <label class="control-label" for="state">State</label>
                  <input class="form-control" type="text" value="" data-ng-model="driver.state" name="state" id="state" placeholder="State" required>
                  <div class="alert alert-danger"  data-ng-show="(signDriver.submitted||signDriver.state.$touched) && signDriver.state.$error.required">
                  <span class="glyphicon glyphicon-remove red" aria-hidden="true"></span>
                  In Which State do you live?
                  </div>
              </div>
              <div class="form-group js-mobile-country required mobile-number" data-ng-class="{
                    'has-error': (signDriver.mobile.$touched||signDriver.mobile.$dirty||signDriver.submitted) && signDriver.mobile.$invalid,
                    'has-success': signDriver.mobile.$dirty && signDriver.mobile.$valid}">
                  <label class="control-label" for="mobile">Mobile Number</label>
                  <select name="mobile_country" id="mobile_country" class="required">
                    <option value="US" label="United States (+1)" selected="" data-iso3="USA" data-telephone_code="+1">United States</option>
                  </select>
                  <div class="mobile-country-mask">
                      <p class="mobile-country-mask-text">+1</p>
                  </div>
                  <input data-ng-model="driver.mobile" class="form-control"  maxlength="10" type="text" value="" name="mobile" id="mobile" data-ng-pattern="/^[1-9]{1}[0-9]{9}$/" placeholder="(201) 555-5555" required>
                  <div class="alert alert-danger"  data-ng-show="(signDriver.submitted||signDriver.mobile.$touched) && signDriver.mobile.$error.required">
                  <span class="glyphicon glyphicon-remove red" aria-hidden="true"></span>
                  Your Mobile Number?
                  </div>
                  <div class="alert alert-danger" data-ng-show="(signDriver.submitted||signDriver.mobile.$dirty) && signDriver.mobile.$error.pattern "><span class="glyphicon glyphicon-remove red" aria-hidden="true"></span>Mobile number Invalid</div>
              </div>
              <div class="form-group required " data-ng-class="{
                    'has-error': (signDriver.car_name.$touched||signDriver.car_name.$dirty||signDriver.submitted) && signDriver.car_name.$invalid,
                    'has-success': signDriver.car_name.$dirty && signDriver.car_name.$valid}">
                  <label class="control-label" for="car_name">Maker of your Car</label>
                  <input class="form-control" type="text" value="" data-ng-model="driver.car_name" name="car_name" id="car_name" placeholder="Maker of Car" required>
                  <div class="alert alert-danger"  data-ng-show="(signDriver.submitted||signDriver.car_name.$touched) && signDriver.car_name.$error.required">
                  <span class="glyphicon glyphicon-remove red" aria-hidden="true"></span>
                  Name ! maker of your car
                  </div>
              </div>
              <div class="form-group required " data-ng-class="{
                    'has-error': (signDriver.car_number.$touched||signDriver.car_number.$dirty||signDriver.submitted) && signDriver.car_number.$invalid,
                    'has-success': signDriver.car_number.$dirty && signDriver.car_number.$valid}">
                  <label class="control-label" for="car_number">Car Registeration Number</label>
                  <input class="form-control" type="text" value="" data-ng-model="driver.car_number" name="car_number" id="car_number" placeholder="Car Registeration Number" required>
                  <div class="alert alert-danger"  data-ng-show="(signDriver.submitted||signDriver.car_number.$touched) && signDriver.car_number.$error.required">
                  <span class="glyphicon glyphicon-remove red" aria-hidden="true"></span>
                  Car Registeration Number?
                  </div>
              </div>
            <div class="signup-form-section submit">
                <div class="col-md-12">
                    <div class="form-group">
                          <button type="submit" class="btn btn-primary"  data-ng-click="signupdriver()">Create Account</button>
                    </div>
                </div>
            </div>
      </form>
      </div>
      
   
    </article>
   </section>
   </div>
   </section>
   </section>
</body>
<script>
  var app = angular.module('signupDriverApp', []);
  app.controller('signupDriverController', function ($http,$scope,$parse,$window) 
  {       
  
     
    $scope.signupdriver=function(){
      if($scope.signDriver.$invalid){
        $scope.signDriver.submitted=true;
      }
      
      else{
        $http({
            method: 'POST',
            url: '/signupDriver',
            data: $scope.driver
          }).
          then(function(response) { 
              if(response.data.status==300)
            	  alert(response.data.message);
              else
                $window.location.href = '/loginDriver';}); 
      } 
    }
  });
</script>
</html>