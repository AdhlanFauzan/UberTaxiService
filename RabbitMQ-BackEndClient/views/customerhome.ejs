 <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main" style="width:100%; height:100%;">
		
		<div class="tab-content" style="width:100%; height:100%;">
			<div id="startRide" class="tab-pane fade in active" style="width:100%; height:100%;">
    <div class="sub-header"><h2>Starting Your Ride</h2>    <button data-ng-hide="currentride" type="submit" style="background:#1EACC7;" class="btn btn-primary active" data-ng-click = "startRide()">Request Ride</button>
    <button data-ng-hide="currentride" type="submit" style="background:#1EACC7;" class="btn btn-primary active" data-ng-click = "showDrivers()">Show Drivers</button>
    
     <div data-ng-show="currentride">
    <table class="table table-striped">
	<thead>
      	<tr>
      		
      		<th>First Name</th>
        	<th>Source City</th>
        	<th>Destination City</th>
        	
        
      	</tr>
    </thead>
		<tr >
			<td> <p>{{currentRide.driver_name}}</p></td>
			<td> <p>{{currentRide.source_city}}</p></td>
			<td> <p>{{currentRide.destination_city}}</p></td>
			
			
		</tr>
			
		</table> 
    </div>
    
    </div>
    <form name="ridePhoto" id="imageUploadRide" enctype="multipart/form-data" >
					<label for="imageBrowse" class="control-label">Upload Ride Image</label>
					
					<input type="file" file-model="picture"  id="imageBrowse" name="picture" class="hidden">
					<label for="imageBrowse" class="btn-default active" style="border:1px solid #D3D6DB">Ride Image</label>
    
    <button type="submit" id="#rideUploadBtn" name="rideUploadBtn" >Upload</button>
    </form>
      <input id="pac-input"  class="controls" type="text"
      placeholder="choose pick-up location">
      <input id="pac-output"  class="controls" type="text"
          placeholder="choose destination">
    <div id="right-panel"></div>
    <div id = "map"></div>
    <br><br>
    <div class="row">
 
   <table class="table table-striped">
	<thead>
      	<tr>
      		
      		<th>First Name</th>
        	<th>Last Name</th>
        	<th>Show Info</th>
        	<th>Select</th>
        
      	</tr>
    </thead>
		<tr data-ng-repeat = "driver in driversInfo">
			<td> <p>{{driver.d_first_name}}</p></td>
			<td> <p>{{driver.d_last_name}}</p></td>
			<td> <button type="submit" class="btn btn-primary" data-ng-click="showDriverInfo(driver.driverID)">Show Info</button></td>
			<td> <button type="submit" class="btn btn-success" data-ng-click="chosenDriver(driver.driverID,driver.d_first_name,driver.d_last_name)" >Choose Driver</button></td>
		</tr>
			
		</table> 
		</div>
    
    

	
    </div>
    <div id="myTrips" class="tab-pane">
        	<h2 class="sub-header">My Trips</h2>
			<div data-ng-include data-src="'myTrips'"></div>
        	</div>
    <div id="myProfile" class="tab-pane">
        	<h2 class="sub-header">Update My Profile</h2>
			<div data-ng-include data-src="'myProfile'"></div>
        	</div>
